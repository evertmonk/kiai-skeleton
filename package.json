{
  "name": "kiai-skeleton",
  "version": "0.1.0",
  "description": "Boilerplate and example code for use with the Kiai VoiceAction Framework",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:ts && rm -rf dist/ && mkdir -p dist && cp -r config flows lib index.js dist/",
    "dev": "npm-run-all --parallel dev:ts dev:local dev:ngrok",
    "dev:local": "nodemon index.js --local",
    "dev:firebase": "firebase serve --only functions --port 3000",
    "deploy:gcloud": "rm -f deploy.zip; zip -rXx node_modules,.git,assets deploy.zip *",
    "deploy:firebase": "cd dist/ && firebase deploy && cd ..",
    "deploy": "npm version patch && npm run deploy:firebase",
    "dev:ts": "tsc --watch",
    "dev:ngrok": "node ngrok.js /dialogflow",
    "build:ts": "tsc"
  },
  "dependencies": {
    "@google-cloud/datastore": "^1.4.2",
    "firebase-admin": "^6.1.0",
    "is-running": "^2.1.0",
    "kiai": "^0.1.5",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "ngrok": "^3.1.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.7.0",
    "prettier": "^1.14.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mediamonks/kiai-skeleton.git"
  },
  "author": {
    "name": "Richard Heuser",
    "email": "richard.heuser@mediamonks.com"
  },
  "license": "MIT",
  "engines": {
    "node": "8"
  }
}
